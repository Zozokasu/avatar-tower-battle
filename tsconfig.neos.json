{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "lib": ["es5"],
    "jsx": "react-jsx",
    "jsxImportSource": "neos-script",
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": [
    "./src/base/neos/**/*.tsx",
    "./src/base/neos/**/*.ts",
    "./src/core/unit/**/*neos.tsx",
    "./src/core/unit/**/*neos.ts",
    "./src/core/unit/base/neos/**/*.tsx",
    "./src/core/unit/base/neos/**/*.ts",
    "./src/neos/**/*.tsx",
    "./src/neos/**/*.ts"
  ]
}
